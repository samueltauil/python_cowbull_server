                "selector": {
                    "app": "cowbull",
                    "tier": "frontend"
                },
                "type": "ClusterIP",
                "sessionAffinity": "None"
            },
            "status": {
                "loadBalancer": {}
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "redis-master",
                "creationTimestamp": null,
                "labels": {
                    "app": "redis",
                    "role": "master",
